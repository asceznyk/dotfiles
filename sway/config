### Variables
set $mod Mod4
set $term alacritty
set $browser brave 

### Font
font pango:Hack Nerd Font 11

### Keyboard layout (Wayland-style)
input * {
  xkb_layout us
}

### Autostart
exec nm-applet --indicator

### Mouse
floating_modifier $mod

### Run rofi
bindsym $mod+space exec rofi -show drun

### Apps
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec $browser

### Kill window
bindsym $mod+q kill

### Window focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

### Window moves
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

### Layouts
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

### Floating
bindsym $mod+Shift+d floating toggle
bindsym $mod+d focus mode_toggle

### Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

### Reload / Exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec swaymsg exit

### Resize mode
mode "resize" {
  bindsym j resize shrink width 10 px
  bindsym k resize grow height 10 px
  bindsym l resize shrink height 10 px
  bindsym semicolon resize grow width 10 px

  bindsym Left resize shrink width 10 px
  bindsym Down resize grow height 10 px
  bindsym Up resize shrink height 10 px
  bindsym Right resize grow width 10 px

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

### Bar
bar {
  separator_symbol "  "
    position bottom
    height 22
    status_command i3status
}

### Touchpad
input type:touchpad {
  tap enabled
  natural_scroll enabled
  scroll_method two_finger
  middle_emulation enabled
  pointer_accel 0.6
}

### Borders
default_border pixel 2

### Display
output eDP-1 scale 1.1

### SwayOSD
exec_always --no-startup-id swayosd-server

### Volume keys (PipeWire / PulseAudio) 
bindsym F3 exec swayosd-client --output-volume raise
bindsym F2 exec swayosd-client --output-volume lower
bindsym F1 exec swayosd-client --output-volume mute-toggle

### Brightness keys
bindsym F4 exec swayosd-client --brightness lower
bindsym F5 exec swayosd-client --brightness raise

### Toggle Mic
bindsym F9 exec swayosd-client --input-volume mute-toggle

### Print Screen
bindsym Print exec grim ~/pictures/shot_$(date +%s).png 
bindsym Shift+Print exec grim -g "$(slurp)" ~/pictures/shot_$(date +%s).png

### Notifs
exec_always mako

### XDG_CURRENT_DESKTOP
exec systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway



